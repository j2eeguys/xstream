<hibernate-mapping package="acceptance.hibernate.reference">
    <class name="Person" table="people">
        <id name="id" column="ID" access="field">
            <generator class="native"/>
        </id>
        
        <property name="name" type="string" column="name" access="field"/>
        
        <many-to-one name="department" class="Department" access="field">
            <column name="departmentid" />
        </many-to-one>    
        <many-to-one name="site" class="Site" access="field">
            <column name="siteid" />
        </many-to-one>    
        
 
    </class>
</hibernate-mapping>
